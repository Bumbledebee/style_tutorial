            </fieldset><!--
            --><fieldset class="register-group block">
                <br>Month<br>
                <select name="day" >
                  <option value="Friday" selected>March</option>
                  <option value="Saturday">April</option>
                  <option value="Sunday">May</option>
                </select>

                <br>Take IP from this country:<br>
                <select name="day">
                  <option value="200.58.97.198">Argentina 200.58.97.198</option>
                  <option value="223.252.33.75">Australia 223.252.33.75</option>
                  <option value="149.154.153.92">Austria 149.154.153.92</option>
                  <option value="81.95.121.251">Belgium 81.95.121.251</option>
                  <option value="201.33.19.7">Brazil 201.33.19.7</option>
                </select>
            </fieldset>
        <input class="btn btn-default" type="submit" name="submit" value="Submit">
        </form><!--
        --><section class="col-2-3">
          <h2>Purchase a Conference Pass</h2>
